<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/info_layout" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/conn_status"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray" />


    <Button
        android:id="@+id/add_pdn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:minWidth="48dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"        
        android:textSize="14sp"
        android:text="@string/add_pdn" />

    <EditText
        android:id="@+id/command"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_pdn"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="textUri"
        android:hint="@string/ping_command" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/send"
        android:layout_alignLeft="@+id/add_pdn"
        android:layout_below="@+id/add_pdn"
        android:background="@drawable/border"
        android:cacheColorHint="@color/list_row_start_color"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp" >

    </ListView>
    

    
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/list"
        android:layout_alignTop="@+id/command"
        android:minHeight="32dp"
        android:minWidth="48dp"
        android:text="@string/send"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/conn_status"
        style="@style/info_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignParentTop="true"
        android:text="@string/conn_status" />

        <Button
            android:id="@+id/pingMMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/em_setting"
            android:layout_below="@+id/send"
            android:minHeight="32dp"
            android:minWidth="48dp"
            android:text="@string/ping_mms"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/output_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pingMMS"
            android:layout_below="@+id/pingMMS"
            android:text="@string/outputtitle" />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignRight="@+id/pingPcscf"
            android:layout_below="@+id/output_title"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignRight="@+id/view2"
            android:layout_below="@+id/view2"
            android:background="@drawable/border"
            android:hint="@string/command_result"
            android:gravity="bottom"
            android:textSize="14sp" />

        <Button
            android:id="@+id/pingPcscf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/output_title"
            android:layout_alignRight="@+id/send"
            android:minHeight="32dp"
            android:minWidth="48dp"
            android:text="@string/ping_pcscf"
            android:textSize="14sp" />

</RelativeLayout>