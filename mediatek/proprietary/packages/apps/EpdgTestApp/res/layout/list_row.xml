<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_margin = "10dp"
    android:clickable="true"
    android:padding="8dp" >

    <ToggleButton
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/apnTypeSpinnner"
        android:minHeight="32dp"
        android:minWidth="48dp"
        android:textOff="@string/toggle_connect"
        android:textOn="@string/toggle_disconnect"
        android:focusable="false"        
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/selectPdnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/apnTypeSpinnner" />

    <Spinner
        android:id="@+id/apnTypeSpinnner"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/selectPdnBtn"
        android:focusable="false"
        android:textAlignment="center"
        android:textSize="14sp" />

</RelativeLayout>
