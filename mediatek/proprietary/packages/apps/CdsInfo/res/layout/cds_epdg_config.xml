<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"                
                 android:padding="10dip" >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/epdg_parameters" />
            <View android:layout_height="1dip" android:layout_width="match_parent" android:background="#777777"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_apn_type" />
                <Spinner
                android:id="@+id/apnSpinnner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
            <Button android:id="@+id/ApnActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:text="@string/dun_apn_button"
            />                
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_fqdn" />
                <EditText android:id="@+id/Server" android:layout_width="match_parent" android:inputType="textNoSuggestions" android:layout_height="wrap_content" android:ems="4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_auth_type" />
                <Spinner
                android:id="@+id/authSpinnner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_sim_index" />
                <Spinner
                android:id="@+id/simSpinnner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_m_prot" />
                <Spinner
                android:id="@+id/protSpinnner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_cert_path" />
                <EditText android:id="@+id/CertPath" android:layout_width="match_parent" android:inputType="textNoSuggestions" android:layout_height="wrap_content" android:ems="4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_ikea_algo" />
                <EditText android:id="@+id/IkeAlgo" android:layout_width="match_parent" android:inputType="textNoSuggestions" android:layout_height="wrap_content" android:ems="4" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/epdg_esp_algo" />
                <EditText android:id="@+id/EspAlgo" android:layout_width="match_parent" android:inputType="textNoSuggestions" android:layout_height="wrap_content" android:ems="4" />
            </LinearLayout>

            <View android:layout_height="1dip" android:layout_width="match_parent" android:background="#777777"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/info_layout" >
            <Button android:id="@+id/Set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:text="@string/sys_set_button"
            />
            <Button android:id="@+id/SetAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:text="@string/epdg_set_all"
            />
            </LinearLayout>
        </LinearLayout>

</ScrollView>
